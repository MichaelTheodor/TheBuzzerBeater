 <!-- Featured Products Section -->
<div class="container mt-4" id="featured-products">
    <div class="row pb-3">
        @foreach (var product in Model)
        {
            <div class="col-lg-3 col-sm-6 mb-3">
                <div class="card border-0 p-3 shadow rounded">
                    <img src="@product.ImageUrl" class="card-img-top rounded" />
                    <div class="card-body">
                        <h5 class="card-title text-opacity-75 text-center overflow-visible" style="white-space: nowrap; overflow: hidden; text-overflow: ellipsis;">
                            @product.Name
                        </h5><br>
                        <p class="text-opacity-75 text-center">
                            Price: <span>@product.Price.ToString("c")</span>
                        </p>
                    </div>
                    <div>
                        <a asp-action="ProductDetails" asp-route-productId="@product.ProductId" class="btn btn-primary bg-gradient border-0 form-control">
                            Details
                        </a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

<!-- Special Offers Section -->
<div class="container mt-4" id="special-offers" style="background-color: #ffeeee;>
    <div class="row">
        <div class="col-12">
            <h2>Special Offers Section</h2>
        </div>
    </div>
</div>

<!-- New Arrivals Section -->
<div class="container mt-4" id="new-arrivals" style="background-color: #eefeff;">
    <div class="row">
        <div class="col-12">
