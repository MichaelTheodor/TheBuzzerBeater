@model IEnumerable<Product>


<div class="container">
    <div class="row">
        <div class="col-12">
            <h2 class="text-center mt-4 mb-4"><strong>Welcome to TheBuzzerBeater – Your Ultimate NBA Fashion Destination!</strong></h2>
        </div>
    </div>
</div>
<br>

<div class="container mt-4" id="featured-products">
    <h4>
        At TheBuzzerBeater online shop, we believe that style and passion go hand in hand. Our mission is to bring the excitement of the NBA from the court to your closet, offering a curated collection of high-quality, trendsetting NBA-themed apparel and accessories.
    </h4><br>

    <div class="container-fluid">
        <div class="row">
            <div class="col-12 video-container">
                <div class="embed-responsive embed-responsive-16by9">
                    <video class="embed-responsive-item" autoplay loop muted>
                        <source src="\images\site\mp4\1.mp4" type="video/mp4">
                    </video>
                </div>
            </div>
        </div>
    </div><br>
    
    <section class="brands__section bg-primary-outline">
        <div class="container ">
            <div class="position-relative">
                <div class="row">
                    <h3 class="my-4 text-center"><strong>Elevate Your Style:</strong></h3>
                    <h4>
                        Discover a winning lineup of fashion-forward gear that allows you to express your love for the game in every aspect of your life.
                        From iconic jerseys to street-style essentials, we've got your wardrobe covered, ensuring you're always on top of your style game.
                    </h4>
                    <h4 class="my-4 text-center text-primary">
                        It's your style, your game, your destination !
                    </h4>
                    <h3 class="my-4 text-center"><strong>Quality Meets Fandom:</strong></h3>
                    <h4>
                        We understand that being a fan is not just about the game; it's a lifestyle.
                        That's why we source premium materials and collaborate with top designers to bring you products that seamlessly blend quality,
                        comfort, and team pride. Each piece is a celebration of your favorite teams and players.
                    </h4>
                </div>
            </div>
        </div>
    </section><br><br>

    <div class="container-fluid">
        <div class="row">
            <div class="col-12 video-container">
                <div class="embed-responsive embed-responsive-16by9">
                    <img src="/images/site/gif/Nba-logos.gif" class="embed-responsive-item img-fluid" alt="NBA Logos">
                </div>
                <div class="text-center mt-4">
                    <h4 class="display-4">Score the Perfect Gear for Every Game!</h4>
                    <p class="lead mb-4">Explore our collection and elevate your game today!</p>
                    <button class="btn btn-lg btn-primary booking-btn" id="booking-btn">SHOP NOW</button>
                </div>
            </div>
        </div>
    </div><br>

    <!-- Section 3: Featured Products -->
    <section id="featured-products" class="featured-products">
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <h2 class="text-center mb-4">Featured Products</h2>
                </div>
            </div>
            <div class="row">
                <!-- Replace the col-md-4 with your product card component -->
                <div class="col-md-4">
                    <div class="card">
                        <img src="product-image.jpg" class="card-img-top" alt="Product Image">
                        <div class="card-body">
                            <h5 class="card-title">Product Name</h5>
                            <p class="card-text">Product Description</p>
                            <a href="#" class="btn btn-primary">Buy Now</a>
                        </div>
                    </div>
                </div>
                <!-- Add more product cards as needed -->
            </div>
        </div>
    </section>

    <!-- Section 4: Promotions and Deals -->
    <section class="promotions">
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <div class="promo-banner text-center">
                        <h2>Check out our latest promotions!</h2>
                        <p>Hurry up! Limited-time offers</p>
                        <a href="#special-offers" class="btn btn-lg btn-warning">View Deals</a>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <h4>Explore Our Exclusive Collection:</h4> <br> <br>

    <div class="row pb-3 text-primary">  
        @foreach (var group in Model.GroupBy(u => u.Category.Name))
        {
            <h2>@group.Key</h2>
            @foreach (var product in group)
            {
                <div class="col-lg-3 col-sm-6 mb-3">
                    <div class="card border-0 p-3 shadow rounded">
                        <img src="@product.ImageUrl" class="card-img-top rounded" />
                        <div class="card-body">
                            <p class="card-title text-opacity-75 text-center overflow-hidden" style="white-space: nowrap; overflow: hidden; text-overflow: ellipsis;">
                                @product.Name
                            </p><br>
                            <p class="text-opacity-75 text-center">
                                Price: <span>@product.Price.ToString("c")</span>
                            </p>
                        </div>
                        <div>
                            <a asp-action="ProductDetails" asp-route-productId="@product.ProductId" class="btn btn-primary bg-gradient border-0 form-control">
                                Details
                            </a>
                        </div>
                    </div>
                </div>
            }
        }
    </div>
</div>
<br> 


