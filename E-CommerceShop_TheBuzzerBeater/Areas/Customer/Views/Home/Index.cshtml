@model IEnumerable<Product>


<!-- Header Section -->
<div class="container">
    <div class="row">
        <div class="col-12">
            <!-- Welcome message, logo, and introductory content -->
            <h2 class="text-center mt-4 mb-4">Welcome to TheBuzzerBeater – Your Ultimate NBA Fashion Destination!</h2>
            <h4> 
                At TheBuzzerBeater online shop, we believe that style and passion go hand in hand. Our mission is to bring the excitement of the NBA from the court to your closet, offering a curated collection of high-quality, trendsetting NBA-themed apparel and accessories.
            </h4>
        </div>
    </div>
</div><br>

<div class="container mt-4">
    <div id="carouselExample" class="carousel slide" data-bs-ride="carousel">
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img src="\images\site\Logo\Logo.png" class="d-block w-50 mx-auto" alt="Slide 1">
            </div>
            <div class="carousel-item">
                <img src="\images\site\17.jpg" class="d-block w-50 mx-auto" alt="Slide 1">
            </div>
            <div class="carousel-item">
                <img src="\images\site\2.png" class="d-block w-50 mx-auto" alt="Slide 2">
            </div>
            <div class="carousel-item">
                <img src="\images\site\5.png" class="d-block w-50 mx-auto" alt="Slide 4">
            </div>
            
        </div>
        <button class="carousel-control-prev" type="button" data-bs-target="#carouselExample" data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="visually-visible">Previous</span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#carouselExample" data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="visually-visible">Next</span>
        </button>
    </div>
</div>




