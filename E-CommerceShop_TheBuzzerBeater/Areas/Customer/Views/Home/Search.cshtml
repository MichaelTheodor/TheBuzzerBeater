@model IEnumerable<Product>

<div class="container mt-4" id="search-results">
    <h2 class="text-center mb-4">Search Results</h2>

    @if (Model.Any())
    {
        <div class="container">
            <div class="row">
                @foreach (var product in Model)
                {
                    <div class="col-lg-3 col-sm-6 mb-3">
                        <div class="card border-0 p-3 shadow rounded">
                            <img src="@product.ImageUrl" class="card-img-top rounded" />
                            <div class="card-body">
                                <p class="card-title text-opacity-75 text-center overflow-hidden" style="white-space: nowrap; overflow: hidden; text-overflow: ellipsis;">
                                    @product.Name
                                </p><br>
                                <p class="text-opacity-75 text-center">
                                    Price: <span>@product.Price.ToString("c")</span>
                                </p>
                            </div>
                            <div>
                                <a href="@Url.Action("ProductDetails", "Home", new { productId = product.ProductId })" class="btn btn-primary bg-gradient border-0 form-control">
                                    Details
                                </a>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    }
    else
    {
        <h4 class="text-center">No products found! Please try something different.</h4>
    }
</div>
